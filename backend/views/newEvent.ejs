<%- include('header', {title: "Esemény létrehozás"}) -%>
<%- include('menu') -%>
<div class="container mt-5">
    <div class="row">
        <h1>Esemény létrehozása</h1>
    </div>
    <div class="row col-12 shadow p-5 mb-5 mt-5 bg-body rounded">
        <form method="post">
            <div class="mb-3 p-2">
                <div class="form-floating">
                    <input
                            type="text"
                            class="form-control"
                            id="name"
                            name="name"
                            placeholder="Esemény címe"
                    />
                    <label for="name">Esemény címe</label>
                </div>
            </div>
            <div class="mb-3 p-2">
                <div class="form-floating">
                    <input
                            type="text"
                            class="form-control"
                            id="place"
                            name="place"
                            placeholder="Helyszín"
                    />
                    <label for="place">Helyszín</label>
                </div>
            </div>
            <div class="mb-3 p-2">
                <label for="date">Válassz dátumot</label>
                <input type="date" id="date" name="date"/>
            </div>
            <div class="mb-3 p-2">
                <div class="input-group">
                    <span class="input-group-text">Leírás</span>
                    <textarea
                            class="form-control"
                            aria-label="With textarea"
                            name="description"
                    ></textarea>
                </div>
            </div>
            <div class="mb-3 p-2">
                <input type="submit" class="btn btn-primary" value="Létrehozás">
                <a class="btn btn-danger" href="/">Mégse</a>
            </div>
        </form>
    </div>
</div>
<%- include('footer') -%>
