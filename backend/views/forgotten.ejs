<%- include('header', {title: "Elfelejtett jelszó"}) -%>
<div class="container w-50 mt-5">
    <div class="row mb-5 col-12">
        <h1>Elfelejtett jelszó</h1>
    </div>
    <div class="row col-12 shadow p-5 mb-5 bg-body rounded">
        <form method="post">
            <div class="mb-3 p-2">
                <div class="form-floating">
                    <input
                            type="email"
                            class="form-control"
                            id="email"
                            name="email"
                            placeholder="E-mail cím"
                    />
                    <label for="email">E-mail cím</label>
                </div>
            </div>

            <div class="mb-3 p-2">
                <button type="submit" class="btn btn-primary">
                    Új jelszót kérek
                </button>
                <a class="btn btn-danger" href="/login">Mégse</a>
            </div>
            <div class="mb-3 p-2 justify-content-center">
                <a href="/reg">Még nem vagy tag?</a>
            </div>
        </form>
    </div>
</div>
<%- include('footer') -%>
