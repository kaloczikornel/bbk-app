{
    "extends": [
        "airbnb-base",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "printWidth": 100,
                "singleQuote": true,
                "tabWidth": 4
            }
        ],
        "no-restricted-syntax": "off",
        "no-plusplus": "off",
        "no-await-in-loop": "off",
        "no-continue": "off",
        "no-console": "off",
        "no-return-await": "off",
        "no-underscore-dangle": ["error", {"allow":  ["_source"]}],
        "func-names": "off"
    },
    "env": {
        "node": true
    }
}
